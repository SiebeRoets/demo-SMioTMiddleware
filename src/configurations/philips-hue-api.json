{
  "apiVersion":"v2.1",
  "deviceAPIs":{
    "HueHub":[
      {
        "parameterReference": "getAllLights",
        "parameterTypeInfo": {
          "parameterType": "Object",
          "unit": null,
          "description":"Find/discorver lights connected to this hub"
        },
        "actions":{
          "Read":{
            "driverType":"RestDriver",
            "commands":[
              {
                "requestType": "GET",
                "url": "http://<ip>/api/<authId>/lights"
              }
            ]
          }
        }
      },
      {
        "parameterReference": "getNewLights",
        "parameterTypeInfo": {
          "parameterType": "Object",
          "unit": null,
          "description":"Find/discorver newly added lights connected to this hub"
        },
        "actions":{
          "Read":{
            "driverType":"RestDriver",
            "commands":[
              {
                "requestType": "POST",
                "url": "http://<ip>/api/<authId>/lights"
              },
              {
                "requestType": "GET",
                "url": "http://<ip>/api/<authId>/lights/new"
              }
            ]
          }
        }
      }
    ],
    "HueLamp":[
      {
        "parameterReference": "lightstatus",
        "parameterTypeInfo": {
          "parameterType": "Boolean",
          "unit": null,
          "validator": {
            "type": "Boolean",
            "values": null
          }
        },
        "actions": {
          "Read": {
            "driverType": "RestDriver",
            "version": "v0.0",
            "settings": {
              "requestType": "GET",
              "url": "http://<ip>/api/<authId>/lights/<hubID>",
              "interpreter": "state/on"
            }
          },
          "Write": {
            "driverType": "RestDriver",
            "version": "v0.0",
            "settings": {
              "requestType": "PUT",
              "url": "http://<ip>/api/<authId>/lights/<hubID>/state",
              "body": "{\"on\":<value>}"
            }
          },
          "Monitor": {
            "driverType": "RestDriver",
            "version": "v0.0",
            "settings": {
              "requestType": "GET",
              "url": "http://<ip>/api/<authId>/lights/<hubID>",
              "interpreter": "state/on"
            }
          }
        }
      },
      {
        "parameterReference": "brightness",
        "parameterTypeInfo": {
          "parameterType": "Number",
          "unit": null,
          "validator": {
            "type": "Number",
            "values": null
          }
        },
        "actions": {
          "Read": {
            "driverType": "RestDriver",
            "version": "v0.0",
            "settings": {
              "requestType": "GET",
              "url": "http://<ip>/api/<authId>/lights/<hubID>",
              "interpreter": "8BitValue"
            }
          },
          "Write": {
            "driverType": "RestDriver",
            "version": "v0.0",
            "settings": {
              "requestType": "PUT",
              "url": "http://<ip>/api/<authId>/lights/<hubID>/state",
              "body": "{\"bri\":<value>}"
            }
          },
          "Monitor": {
            "driverType": "RestDriver",
            "version": "v0.0",
            "settings": {
              "requestType": "GET",
              "url": "http://<ip>/api/<authId>/lights/<hubID>",
              "interpreter": "8BitValue"
            }
          }
        }
      }
    ]
  }
}