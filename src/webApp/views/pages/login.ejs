<%- include('../template/header')-%>
<script>
</script>

<div class="container" id='loginregister'>

  <div class="col s12 m6  ">
    <div class="row">
      <div class="col s12">
        <ul class="tabs " id="loginTabs">
          <li class="tab col s6 " ><a href="#loginForm" class="active blue-text text-darken-4">Login</a></li>
          <li class="tab col s6"><a href="#registerForm" class="blue-text text-darken-4">Register</a></li>
        </ul>
      </div>
    </div>
  </div>

  <div id="loginForm" class="col s12 z-depth-6 card-panel">
    <form class="login-form" id="Login-form" action="login" method="POST">
      <div class="row">
        <h5>Login for access</h5>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">person</i>
          <input class="validate" id="Lusername" name="username" type="text"/>
          <label for="username">Username</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">lock_outline</i>
          <input id="Lpassword" name="password" type="password"/>
          <label for="password">Password</label>
        </div>
      </div>
      
      <div class="row">
        <div class="input-field col s12">
          <button type="submit" form="Login-form" class="btn waves-effect waves-light blue darken-1 col s12" >Login</button>
        </div>
      </div>
    </form>
  </div>
  <div id="registerForm" class="col s12 z-depth-6 card-panel">
    <form class="login-form">
      <div class="row">
        <h5>Create a local user</h5>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">person</i>
          <input class="validate" id="Rusername" type="text">
          <label for="username">Username</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">lock_outline</i>
          <input id="Rpassword" type="password">
          <label for="password">Password</label>
        </div>
      </div>
      
      <div class="row">
        <div class="input-field col s12">
          <input type="submit" class="btn waves-effect waves-light blue darken-1 col s12" value="Register user"/>
        </div>
      </div>
      
    </form>
  </div>
</div>
<%- include('../template/footer')-%>
