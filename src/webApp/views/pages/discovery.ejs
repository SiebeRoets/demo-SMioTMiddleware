<%- include('../template/header')-%>
<div class="container">
  <div class="col s6 m7">
    <div class="card horizontal">
      <div class="card-stacked">
        <div class="card-content">
            <div class="row">
              <div class="col s11">
                <h5>Network Scan:</h5>
              </div>
              <div class="col s1">
               <i class="material-icons" style="font-size: 45px">settings_ethernet</i>
              </div>
            </div>
            <button class="waves-effect waves-light btn blue darken-1" onclick=startSearch()><i class="material-icons left">search</i>Discover</button>
          <p class="text"> Results of the network scan will appear here:
          </p>
        </div>
        <div class="card-action">
          <table id="eventtTable">
            <thead>
              <tr>
                  <th>Brand</th>
                  <th>Type</th>
                  <th>Address</th>
                  <th>Action</th>
              </tr>
            </thead>
            <tbody> 
              <tr>
                <td><img style="height: 30px;" src="./images/philipshue.png"/></td>
                <td>Hue Bridge</td>
                <td>192.168.1.118</td>
                <td><button class="waves-effect waves-light btn blue darken-1">Add device</button></td>
              </tr> 
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="divider"></div>
  <div class="col s6 m7">
    <div class="card horizontal">
      <div class="card-stacked">
        <div class="card-content">
            <div class="row">
              <div class="col s11">
                <h5>Bluetooth Scan:</h5>
              </div>
              <div class="col s1">
               <i class="material-icons" style="font-size: 45px">bluetooth_searching</i>
              </div>
            </div>
            <button class="waves-effect waves-light btn blue darken-1" onclick=startSearch()><i class="material-icons left">search</i>Discover</button>
          <p class="text"> Results of the BLE scan will appear here:
          </p>
        </div>
        <div class="card-action">
          <table id="eventtTable">
            <thead>
              <tr>
                  <th>Brand</th>
                  <th>Name</th>
                  <th>Service UUID</th>
                  <th>Rssi (dBm)</th>
                  <th>Action</th>
              </tr>
            </thead>
            <tbody> 
              <tr>
                <td><img style="width: 30px;" src="./images/polar.jpg"/></td>
                <td>Polar H7</td>
                <td>Heart Rate [0x180D]</td>
                <td>-43</td>
                <td><button class="waves-effect waves-light btn blue darken-1">Connect</button></td>
              </tr> 
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  </div>

</div>
<div id="modal1" class="modal">
<div class="modal-content">
<h4>Add Device?</h4>
<ul class="collection with-header">
<li class="collection-header"><h4 id="ModaldevName">Device Name</h4></li>
<li class="collection-item" id="deviceBrand">Alvin</li>
<li class="collection-item" id="ipAdress">Alvin</li>
</ul>
</div>
<div class="modal-footer">
 <button class="waves-effect waves-light btn blue darken-1" onclick=addDevice()><i class="material-icons left">add</i>Add</button>
<button class="waves-effect waves-light btn blue darken-1" onclick=closeModal()><i class="material-icons left">close</i>Close</button>
</div>
</div>
<%- include('../template/footer')-%>
